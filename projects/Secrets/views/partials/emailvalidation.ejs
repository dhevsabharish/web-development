<script>
  document.querySelector("input[type=email]").autocomplete = "off";
  document.querySelector("input[type=email]").addEventListener("keyup", (e) => {
    if (/^([a-z\d-\.]+)@([a-z\d-]+)\.([a-z]+)$/.test(e.target.value)) {
      e.target.className = 'is-valid form-control';
    } else {
      e.target.className = 'is-invalid form-control';
    }
  })
</script>